<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressDrawable">@android:color/transparent</item>
        <item name="android:thumb">@drawable/seek_bar_thumb</item>
        <item name="android:background">@android:color/white</item>


    </style>

    <style name="NavigationViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/accent</item>
    </style>

    <style name="AboutTheme" parent="BaseTheme" />

    <style name="GenericDetailTheme" parent="AppTheme" />

    <style name="FindStationForSongTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">#2196F3</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="ItemDetailTheme" parent="AppTheme" />

    <style name="CreatePlaylistTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/accent_dark</item>
    </style>


    <style name="AppTheme.IgnoreSystemBars" parent="BaseTheme" />

    <style name="BillingTheme" parent="Theme.AppCompat.Light.Dialog" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WhiteAccentTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="ItemTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ItemSubtitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

</resources>
