<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="shuffle"
        android:icon="@drawable/shortcut_shuffle"
        android:shortcutShortLabel="@string/shuffle"
        android:shortcutLongLabel="@string/shuffle">
        <intent
            android:action="de.julianostarek.music.action.SHUFFLE"
            android:targetPackage="de.julianostarek.music"
            android:targetClass="de.julianostarek.music.activities.MainActivity" />
    </shortcut>
    <shortcut
        android:shortcutId="last_added"
        android:icon="@drawable/shortcut_last_added"
        android:shortcutShortLabel="@string/last_added"
        android:shortcutLongLabel="@string/last_added">
        <intent
            android:action="de.julianostarek.music.action.PLAY_LAST_ADDED"
            android:targetPackage="de.julianostarek.music"
            android:targetClass="de.julianostarek.music.activities.MainActivity" />
    </shortcut>
    <shortcut
        android:shortcutId="favorites"
        android:icon="@drawable/shortcut_favorites"
        android:shortcutShortLabel="@string/favorites"
        android:shortcutLongLabel="@string/favorites">
        <intent
            android:action="de.julianostarek.music.action.PLAY_FAVORITES"
            android:targetPackage="de.julianostarek.music"
            android:targetClass="de.julianostarek.music.activities.MainActivity" />
    </shortcut>
</shortcuts>