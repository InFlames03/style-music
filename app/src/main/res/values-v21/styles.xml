<resources>

    <style name="AppTheme" parent="AppTheme.V21" />

    <style name="AppTheme.V21" parent="AppTheme.V19">
        <!-- API lvl 21 attributes -->

        <!-- System bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressDrawable">@android:color/transparent</item>
        <item name="android:thumb">@drawable/seek_bar_thumb</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="FindStationForSongTheme" parent="FindStationForSongTheme.V21" />

    <style name="FindStationForSongTheme.V21" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">#2196F3</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/transition_fab_morph
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/transition_fab_morph
        </item>
    </style>

    <style name="GenericDetailTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/black_semi_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/transition_generic_detail_shared
        </item>
        <item name="android:windowSharedElementReturnTransition">
            @transition/transition_generic_detail_shared
        </item>
        <item name="android:windowEnterTransition">@transition/transition_generic_detail</item>
        <item name="android:windowReturnTransition">@transition/transition_generic_detail</item>
    </style>

    <style name="ItemDetailTheme" parent="ItemDetailTheme.V21" />

    <style name="ItemDetailTheme.V21" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowEnterTransition">@transition/transition_item_detail</item>
        <item name="android:windowReturnTransition">@transition/transition_item_detail</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/transition_item_detail_shared
        </item>
        <item name="android:windowSharedElementReturnTransition">
            @transition/transition_item_detail_shared
        </item>
    </style>

    <style name="CreatePlaylistTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/accent_dark</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/transition_default_slide</item>
        <item name="android:windowReturnTransition">@transition/transition_default_slide</item>
    </style>

</resources>